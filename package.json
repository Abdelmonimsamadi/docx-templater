{
  "name": "@abdelmonimsamadi/docx-templater",
  "version": "1.0.0",
  "description": "Advanced DOCX template engine with support for placeholders, loops, conditionals, tables, and images",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.build.json",
    "build:esm": "tsc --project tsconfig.build.json --module es2020 --outDir dist/esm && node scripts/build-esm.js",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "tsx src/test.ts",
    "demo": "node demo.js",
    "dev": "tsx --watch src/test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "docx",
    "template",
    "templating",
    "word",
    "document",
    "office",
    "placeholder",
    "loops",
    "conditional",
    "tables",
    "images",
    "buffer",
    "typescript"
  ],
  "author": {
    "name": "Abdelmonim Samadi",
    "email": "abdelmonimsamadi@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Abdelmonimsamadi/docx-templater.git"
  },
  "homepage": "https://github.com/Abdelmonimsamadi/docx-templater#readme",
  "bugs": {
    "url": "https://github.com/Abdelmonimsamadi/docx-templater/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "image-size": "^2.0.2",
    "jszip": "^3.10.1",
    "xmldom": "^0.6.0"
  }
}
